<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.inc.hope.bookworm101.Activity.NewArrivalBookDetailActivity">

    <ImageView
        android:id="@+id/iv_book_cover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_book_black_48dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="12dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="22dp" />

    <TextView
        android:id="@+id/tv_book_name"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textAlignment="center"
        android:gravity="center"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/iv_book_cover"
        android:layout_marginStart="19dp"
        android:layout_marginTop="42dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/iv_book_cover" />

    <TextView
        android:id="@+id/tv_author_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintTop_toBottomOf="@+id/tv_book_name"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/tv_book_name"
        android:layout_marginTop="30dp"
        android:layout_marginStart="40dp"
        android:layout_below="@+id/tv_book_name"
        android:layout_alignStart="@+id/tv_book_name" />




</RelativeLayout>
